<% @Sales = "Sales" %>
<% @Marketing = "Marketing" %>
<% @Technical = "Technical" %>
<h1>Displayer</h1>
<hr />
<%= form_for :display, url: displays_path do |f| %>
  <p>
    <%= f.label :Name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :Email %><br>
    <%= f.text_field :email %>
  </p>
<p>
  <%= f.label :'Department  :' %>
  <%= radio_button_tag(:department, "Sales") %>
  <%= label_tag(:department_sales, @Sales) %>
  <%= radio_button_tag(:department, "Marketing") %>
  <%= label_tag(:department_market, @Marketing) %>
  <%= radio_button_tag(:department, "Technical") %>
  <%= label_tag(:department_tech, @Technical) %>
</p>

  <p>
    <%= f.label :Message %><br>
    <%= f.text_area :message %>
  </p>

  <p>
      <input type="radio" /><label>I am Done</label>
  </p>


  <p>
    <%= f.submit %>
  </p>
<% end %>
